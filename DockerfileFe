FROM mcr.microsoft.com/dotnet/aspnet:3.1 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build
WORKDIR /src
COPY ["springdata-fe/springdata-fe.csproj", "springdata-fe/"]
RUN dotnet restore "springdata-fe/springdata-fe.csproj"
COPY . .
WORKDIR "/src/springdata-fe"
RUN dotnet build "springdata-fe.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "springdata-fe.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "springdata-fe.dll"]